    "spacing": {
      "0": "0px",
      "1": "4px",
      "2": "8px",
      "3": "12px",
      "4": "16px",
      "5": "20px",
      "6": "24px",
      "8": "32px",
      "10": "40px",
      "12": "48px",
      "16": "64px",
      "20": "80px",
      "24": "96px"
    },
    "borderRadius": {
      "none": "0px",
      "sm": "4px",
      "md": "6px",
      "lg": "8px",
      "full": "50%"
    },
    "shadow": {
      "sm": "0 1px 2px rgba(0, 0, 0, 0.04)",
      "md": "0 2px 4px rgba(0, 0, 0, 0.06)",
      "lg": "0 4px 8px rgba(0, 0, 0, 0.08)"
    },
    "transition": {
      "duration": {
        "fast": "100ms",
        "normal": "150ms",
        "slow": "250ms",
        "slower": "350ms"
      },
      "easing": {
        "default": "cubic-bezier(0.25, 0, 0.25, 1)",
        "in": "cubic-bezier(0.4, 0, 1, 1)",
        "out": "cubic-bezier(0.25, 0, 0.25, 1)",
        "inOut": "cubic-bezier(0.4, 0, 0.25, 1)"
      }
    },
    "zIndex": {
      "dropdown": 100,
      "sticky": 200,
      "modal-backdrop": 300,
      "modal": 400,
      "popover": 500,
      "tooltip": 600,
      "toast": 700
    },
    "opacity": {
      "hover-light": 0.03,
      "hover-dark": 0.05,
      "selected-light": 0.05,
      "selected-dark": 0.08,
      "muted": 0.38,
      "backdrop-light": 0.5,
      "secondary-dark": 0.6,
      "backdrop-dark": 0.7,
      "primary-dark": 0.87
