    "typography": {
      "fontFamily": "'CrispByYosi', system-ui, sans-serif",
      "fontWeight": {
        "thin": 100,
        "light": 300,
        "regular": 400,
        "medium": 500,
        "bold": 700
      },
      "fontSize": {
        "xs": {
          "size": "11px",
          "lineHeight": "1.3",
          "letterSpacing": "0.1em",
          "weight": 500,
          "use": "Labels (UPPERCASE)"
        },
        "sm": {
          "size": "13px",
          "lineHeight": "1.5",
          "letterSpacing": "0",
          "weight": 300,
          "use": "Captions, metadata, code"
        },
        "base": {
          "size": "15px",
          "lineHeight": "1.6",
          "letterSpacing": "0",
          "weight": 400,
          "use": "Body text"
        },
        "lg": {
          "size": "17px",
          "lineHeight": "1.5",
          "letterSpacing": "0",
          "weight": 500,
          "use": "Subsection heads"
        },
        "xl": {
          "size": "20px",
          "lineHeight": "1.4",
          "letterSpacing": "-0.01em",
          "weight": 500,
          "use": "Section heads"
        },
        "2xl": {
          "size": "24px",
          "lineHeight": "1.3",
          "letterSpacing": "-0.01em",
          "weight": 700,
          "use": "Page titles"
        },
        "3xl": {
          "size": "30px",
          "lineHeight": "1.2",
          "letterSpacing": "-0.02em",
          "weight": 700,
          "use": "Hero titles"
        },
        "4xl": {
          "size": "36px",
          "lineHeight": "1.2",
          "letterSpacing": "-0.02em",
          "weight": 700,
          "use": "Display (rare)"
        }
      }
