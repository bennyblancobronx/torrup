    "accessibility": {
      "touchTarget": {
        "minimum": "44px",
        "recommended": "48px"
      },
      "contrast": {
        "normalText": "4.5:1",
        "largeText": "3:1",
        "uiComponents": "3:1"
      }
    }
  }
