        "width": "240px",
        "padding": "24px 16px"
      },
      "header": {
        "height": "64px",
        "padding": "0 24px"
      },
      "modal": {
        "sm": "480px",
        "md": "640px",
        "lg": "800px",
        "padding": "24px"
      },
      "container": {
        "maxWidth": "1280px"
      },
      "table": {
        "headerHeight": "48px",
        "rowHeight": "52px",
        "cellPadding": "12px 16px"
      }
    },
    "components": {
      "button": {
        "sm": {
          "height": "32px",
          "padding": "6px 12px",
          "fontSize": "13px"
        },
        "md": {
          "height": "44px",
          "padding": "10px 20px",
          "fontSize": "15px"
        },
        "lg": {
          "height": "52px",
          "padding": "14px 28px",
          "fontSize": "17px"
        }
      },
      "icon": {
        "sm": {
          "size": "16px",
          "strokeWidth": "1.5"
        },
        "md": {
          "size": "20px",
          "strokeWidth": "2"
        },
        "lg": {
          "size": "24px",
          "strokeWidth": "2"
        },
        "xl": {
          "size": "32px",
          "strokeWidth": "2.5"
        }
      }
